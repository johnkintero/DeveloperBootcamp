<% include ../partials/header %>
<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item ">Info 2</li>
                <li class="list-group-item ">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card" style="margin-bottom: 10px;">
                <img src="<%= campground.image %>" class="img-responsive" style="margin-bottom: 10px;">
                <div class="caption">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a href=""><%=campground.name %></a></h4>
                    <p><%=campground.description %></p>
                </div>
            </div>
            <div class="card-header">
                <div class="text-right">
                    <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">New Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.autor %></strong>
                            <span class="float-right">10 day ago</span>
                            <p><%= comment.text %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
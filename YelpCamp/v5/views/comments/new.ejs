<%  include ../partials/header %>
<div class="container" style="margin-top:20px;">
        <h1 style="text-align: center;">Create a new Comment to <%= campground.name%></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="Comment"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="autor" name="comment[autor]">
                </div>
                <div class="form-group">
                        <button class="btn btn-sm btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id%>">Go back!!</a>
        </div>
    </div>
</div>
<%  include ../partials/footer %>